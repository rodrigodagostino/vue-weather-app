{
	"printWidth": 120,
	"tabWidth": 4,
	"useTabs": true,
	"semi": false,
	"singleQuote": true,
	"bracketSpacing": true,
	"trailingComma": "es5",
	"jsxSingleQuote": true,
	"jsxBracketSameLine": false,
	"arrowParens": "always",
	"overrides": [
		{
			"files": [".*", ".*.js", "package.json"],
			"options": {
				"tabWidth": 2,
				"useTabs": false,
				"singleQuote": false
			}
		},
		{
			"files": ["*.scss", "*.css"],
			"options": {
				"printWidth": 100,
				"singleQuote": false
			}
		}
	]
}
